<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="466dp" >

    <ImageView
        android:id="@+id/imageViewSolicitacaoFoto"
        android:layout_width="80dp"
  		android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textViewNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewSolicitacaoFoto"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/imageViewSolicitacaoFoto"
        android:text="Nome do Usuario" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewSolicitacaoFoto"
        android:layout_below="@+id/imageViewSolicitacaoFoto"
        android:layout_marginTop="44dp"
        android:text="@string/textAnunciarOrigem" />

    <TextView
        android:id="@+id/textViewSolicitaOrigem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="Local de Origem" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:text="@string/textSolicitaHorario" />

    <TextView
        android:id="@+id/textViewSolicitaHorarioOrigem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textViewSolicitaOrigem"
        android:text="HOrÃ¡rio da Carona" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="15dp"
        android:text="@string/textAnunciarDestino" />

    <TextView
        android:id="@+id/textViewSolicitaDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/textViewSolicitaHorarioOrigem"
        android:text="Local de Destino" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:text="@string/textSolicitaHorario" />

    <TextView
        android:id="@+id/textViewSolicitaHorarioDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textViewSolicitaDestino"
        android:text="TextView" />
    
    <!-- CARONAS -->
    <TextView
        android:id="@+id/textLabelVagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:text="Vagas:" />
    <TextView
        android:id="@+id/textViewVagasDisponiveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textLabelVagas"
        android:layout_alignBottom="@+id/textLabelVagas"
        android:layout_alignLeft="@+id/textViewSolicitaHorarioDestino"
        android:text="TextView" />
    <!-- CARONAS -->

    <EditText
        android:id="@+id/editTextSolicitaMensagem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textLabelVagas"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Digite uma mensagem"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewTipoCarona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textViewNomeUsuario"
        android:text="Pede/recebe" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSolicitaMensagem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonVerAvaliacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:text="@string/bt_verAvaliacaoes" />

        <Button
            android:id="@+id/buttonEnviarSolicitacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btSolicitar" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>